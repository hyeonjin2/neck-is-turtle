<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <!--상단 레이아웃-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#29E1C0"
        android:elevation="10dp"
        android:orientation="vertical">

        <!--버튼들-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingEnd="30dp"
            android:paddingTop="35dp"
            android:gravity="right"
            android:orientation="horizontal">

            <!--알람 버튼-->
            <ImageButton
                android:id="@+id/btn_alert"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/image_alert" />

            <!--좋아요 버튼-->
            <ImageButton
                android:id="@+id/btn_like"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/image_like" />

            <!--환경설정 버튼-->
            <ImageButton
                android:id="@+id/btn_setting"
                android:layout_marginStart="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/image_setting" />
        </LinearLayout>

        <!--날짜 layout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_yesterday"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/caret_left"/>

            <TextView
                android:id="@+id/text_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:textSize="26dp"
                android:textColor="#000"
                android:text="토요일" />

            <ImageButton
                android:id="@+id/btn_tomorrow"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/caret_right" />
        </LinearLayout>
    </LinearLayout>

    <!--하단 레이아웃-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="5dp"
        android:paddingStart="35dp"
        android:paddingEnd="25dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Daily Schedule"
                android:textColor="#07586C"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="end"
                android:background="@drawable/circle_calendar"
                android:elevation="4dp"
                app:srcCompat="@drawable/image_calendar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <!--스트레칭 알람이 없을 때 -->
            <LinearLayout
                android:id="@+id/layout_empty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rect_empty"
                android:padding="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:text="앗 아직 스케쥴이 없네요!" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:text="스트레칭 알람을 추가해주세요!" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rect_plus"
                    android:text="추가하러 가기"
                    android:textSize="18dp"
                    android:textColor="#fff"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Daily Mission"
            android:textColor="#07586C"
            android:textSize="20dp" />

        <!--daily mission들-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <!--Mission 1-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:paddingTop="10dp"
                android:paddingStart="20dp"
                android:background="@drawable/rect_daily"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="#29E1C0"
                    android:textSize="18dp"
                    android:text="스트레칭 하기" />

                <TextView
                    android:id="@+id/mission1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="3dp"
                    android:textSize="15dp"
                    android:text="목 스트레칭을 1분간 함께 해봐요!" />
            </LinearLayout>

            <!--Mission 2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                android:paddingTop="10dp"
                android:paddingStart="20dp"
                android:background="@drawable/rect_daily"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="#29E1C0"
                    android:textSize="18dp"
                    android:text="측면사진 기록 남기기" />

                <TextView
                    android:id="@+id/mission2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="3dp"
                    android:textSize="15dp"
                    android:text="아직 측면사진 기록을 남기지 않으셨네요!" />
            </LinearLayout>

            <!--Mission 3-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                android:paddingTop="10dp"
                android:paddingStart="20dp"
                android:background="@drawable/rect_daily"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="#29E1C0"
                    android:textSize="18dp"
                    android:text="바른 자세 챌린지" />

                <TextView
                    android:id="@+id/mission3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="3dp"
                    android:textSize="15dp"
                    android:text="추후 구현할 예정입니다." />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!--하단 메뉴바-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/rect_menu"
                    android:orientation="horizontal">
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:background="@drawable/circle_click"/>

                <View
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle_click"/>
                <View
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:background="@drawable/circle_click"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_graph"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/image_home" />

                <ImageButton
                    android:id="@+id/btn_home"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/image_home" />

                <ImageButton
                    android:id="@+id/btn_stretching"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/image_home" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>